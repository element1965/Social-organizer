{
  "name": "social-organizer",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently \"npm run relay\" \"npm run client\"",
    "client": "npm --prefix client run dev",
    "relay": "npm --prefix relay run dev",
    "install:all": "npm --prefix relay install && npm --prefix client install",
    "postinstall": "cd relay && npm install && cd ../client && npm install",
    "build": "npm --prefix client run build",
    "start": "node relay/server.js"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
